{
  "private": true,
  "//": "NOTE: this list should be synced with the 'references' field in the root `tsconfig.json` file",
  "workspaces": [
    "modules/shared",
    "modules/bot",
    "modules/broker",
    "modules/runner"
  ],
  "scripts": {
    "build": "run-p build:bot build:broker build:runner",
    "build:bot": "yarn workspace @electron/bugbot-bot build",
    "build:broker": "yarn workspace @electron/bugbot-broker build",
    "build:runner": "yarn workspace @electron/bugbot-runner build",
    "start:bot": "yarn workspace @electron/bugbot-bot start",
    "start:broker": "yarn workspace @electron/bugbot-broker start",
    "start:runner": "yarn workspace @electron/bugbot-runner start",
    "test": "run-s test:broker test:runner test:shared",
    "test:broker": "yarn workspace @electron/bugbot-broker test",
    "test:runner": "yarn workspace @electron/bugbot-runner test",
    "test:shared": "yarn workspace @electron/bugbot-shared test",
    "lint": "run-p lint:eslint lint:prettier",
    "lint:fix": "run-p lint:eslint:fix lint:prettier:fix",
    "lint:eslint": "eslint modules/*/src/**/*.ts",
    "lint:eslint:fix": "eslint --fix modules/*/src/**/*.ts",
    "lint:prettier": "prettier --check package.json modules/*/package.json modules/*/src/**/*.ts",
    "lint:prettier:fix": "prettier --write package.json modules/*/package.json modules/*/src/**/*.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  }
}
