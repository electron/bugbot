/**
 * This file is the "base" configuration used by each TypeScript module. This is the place to
 * define sensible defaults that are used in each TypeScript module.
 */
{
  "compilerOptions": {
    "composite": true,
    "declaration": true, // required by "composite"
    "downlevelIteration": true,
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ]
  }
}
